<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="language">
        <Preference
            app:key="@string/pref_key_language"
            app:summary="@string/change_language"
            app:title="@string/language" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">
        <ListPreference
            app:defaultValue="@string/pref_dark_follow_system"
            app:entries="@array/dark_mode"
            app:entryValues="@array/dark_mode_value"
            app:key="@string/pref_key_dark"
            app:title="@string/pref_dark_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>



</PreferenceScreen>